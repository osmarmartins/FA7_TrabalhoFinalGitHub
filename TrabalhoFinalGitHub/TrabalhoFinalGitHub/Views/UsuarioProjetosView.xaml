<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrabalhoFinalGitHub.Views.UsuarioProjetosView">
  <ContentPage.Content>
    <StackLayout Orientation="Vertical">
      <Label Text="Projetos por Usuário" VerticalOptions="Center" HorizontalOptions="Center" Font="24"/>

      <StackLayout Padding="30" VerticalOptions="StartAndExpand">
        <ListView x:Name="listViewUsuarios" ItemsSource="{Binding Usuarios}">
          <ListView.ItemTemplate>
            <DataTemplate>
              <TextCell Text="{Binding Nome}"/>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>

        <ListView x:Name="repositories"/>

      </StackLayout>

    </StackLayout>
  </ContentPage.Content>
</ContentPage>