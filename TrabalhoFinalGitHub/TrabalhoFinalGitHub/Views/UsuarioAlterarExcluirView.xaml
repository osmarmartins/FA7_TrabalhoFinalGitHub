<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrabalhoFinalGitHub.Views.UsuarioAlterarExcluirView">
  <ContentPage.Content>
    <StackLayout Padding="30">
      <Label Text="Manutenção do Cadastro de Usuários" VerticalOptions="Center" HorizontalOptions="Center" Font="24"/>
    
      <Label x:Name="lbID"/>
      <Entry x:Name="txtUsuario"/>

      <StackLayout Orientation="Horizontal" Padding="30">
        <Button x:Name="btnAlterar" Text="Alterar" HorizontalOptions="CenterAndExpand"/>
        <Button x:Name="btnExcluir" Text="Excluir" HorizontalOptions="CenterAndExpand"/>
      </StackLayout>

    </StackLayout>
  </ContentPage.Content>
      
</ContentPage>